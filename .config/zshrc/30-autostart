# -----------------------------------------------------
# y for Yazi
# -----------------------------------------------------

function y() {
	local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
	yazi "$@" --cwd-file="$tmp"
	IFS= read -r -d '' cwd < "$tmp"
	[ -n "$cwd" ] && [ "$cwd" != "$PWD" ] && builtin cd -- "$cwd"
	rm -f -- "$tmp"
}
 
# -----------------------------------------------------
# Cowsay
# -----------------------------------------------------
if (( RANDOM % 50 == 0 )); then
    if (( RANDOM % 2 == 0 )); then
        xcowsay -r 100 "Stinkin' Farting' Rachel" &
    else
        xcowsay -r 100 "Farting' Stinkin' Rachel" &
    fi    
fi
 

# -----------------------------------------------------
# Fastfetch
# -----------------------------------------------------
FLAG_FILE="/tmp/.first_terminal_flag_$USER"

if [ ! -f "$FLAG_FILE" ]; then
    touch "$FLAG_FILE"
    fastfetch --config examples/24
fi
